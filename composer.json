{
    "name": "botman/driver-whatsapp",
    "license": "MIT",
    "description": "Whatsapp driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Whatsapp"
    ],
    "homepage": "http://github.com/googlehokry/driver-whatsapp",
    "authors": [
        {
            "name": "Shokry Mohamed",
            "email": "ms.shokry.mohamed@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "botman/botman": "~3.0"
    },
    "require-dev": {
        "botman/studio-addons": "~1.0",
        "illuminate/support": "~5.5.0",
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "dev-master",
        "botman/driver-facebook": "~2.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Whatsapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "laravel": {
            "providers": [
                "BotMan\\Drivers\\Whatsapp\\Providers\\WhatsappServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
